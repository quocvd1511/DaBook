      })

      /*Hồ sơ*/
      $('#account_profile').click(function(){
        $('#hoso').show();
        $('#diachi').hide();
        $('#doimatkhau').hide();
        $('#donhang').hide();
         $('#hoatdong').hide();
        $('#khuyenmai').hide();
        $('#danhgia').hide();
        $('#khovoucher').hide();
        $('#diemtichluy').hide();
