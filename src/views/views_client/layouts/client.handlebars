  <body>

    <div class="app">
      <header class="header">
        <div class="grid">
          <nav class="header__navbar">
            <ul class="header__navbar-list">
              <li class="header__navbar-item">
                Vào cửa hàng trên ứng dụng DaBook
              </li>
            </ul>

            <ul class="header__navbar-list">
              <div class="header__language-select">
                <span class="header__language-select-label">Ngôn ngữ</span>
                <i class="header__language-select-icon ti-angle-down"></i>
                <ul class="header__language-option">
                  <li
                    class="header__language-option-item header__language-option-item--active"
                  >

                    <span>Việt Nam</span>
                    <i class="ti-check"></i>
                  </li>
                  <li class="header__language-option-item">
                    <span>English</span>
                    <i class="ti-check"></i>
                  </li>
                </ul>
              </div>
              <li class="header__navbar-item">
                <a href="" class="header__navbar-item--link open-login-noti">
                  <i class="header__navbar-icon ti-bell"></i>
                  Thông báo
                </a>
                {{!-- <div class="header__notify">
                    <header class="header__notify-header">
                        <h3>Thông báo mới nhận</h3>
                    </header>
                    <ul class="header__notify-list">
                        <li class="header__notify-item header__notify-item--viewed">
