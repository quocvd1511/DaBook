              </li>
              <li class="header__navbar-item">
                <a href="" class="header__navbar-item--link">
                  <i class="header__navbar-icon far fa-question-circle"></i>
                  Trợ giúp
                </a>
              </li>
              <li class="header__navbar-item header__navbar-item--separate">
                <div href="" class="header__navbar-item--link open-login">
                  Đăng nhập
                </div>
              </li>
              <li class="header__navbar-item">
                <div href="" class="header__navbar-item--link open-signup">
                  Đăng ký
                </div>
              </li>
            </ul>
          </nav>

          <!-- log in -->
          <div class="modal modal__login">
            <div class="modal__overlay"></div>
            <div class="modal__body">
              <!--login form-->
              <div class="auth-form">
                <div class="auth-form__container">
                  <div class="auth-form__header">
                    <h3 class="auth-form__heading">ĐĂNG NHẬP</h3>
                  </div>
                  <div class="modal-close">
                    <i class="ti-close"></i>
                  </div>

                  <form  method="POST" action="/">
                  <div class="auth-form__form">
                    <div class="auth-form__group">
                      <label class="auth-form__label">Tên tài khoản/Email</label>
                      <input
                        name="username"
                        type="text"
                        class="auth-form__input"
                        placeholder="Nhập tên tài khoản hoặc Email"
                      />
                    </div>
                    <div class="auth-form__group">
                      <label class="auth-form__label">Mật khẩu</label>
                      <input
                        name="password"
                        type="text"
                        class="auth-form__input"
                        placeholder="Nhập mật khẩu"
                      />
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="custom-control custom-checkbox">
                      <input
                        type="checkbox"
                        class="custom-control-input"
                        id="customControlInline"
                        style="margin-top: 2px;"
                      />
                      <label
                        class="custom-control-label"
                        for="customControlInline"
                      >Remember me</label>
                    </div>
                  </div>

                  <div class="auth-form__controls">
                    <button class="btn btn--primary btn__login" type="submit">Đăng nhập</button>
                  </div>
                </form>

                  <div class="auth-form__socials">
                    <a
                      href=""
                      class="auth-form__socials--fb btn btn--with-icon"
                    >
                      <i
                        class="auth-form__socials-icon fab fa-facebook-square"
                      ></i>
                      <span>Đăng nhập với Facebook</span>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Sign up -->
          <div class="modal modal-logup">
            <div class="modal__overlay"></div>

            <div class="modal__body">
              <!--register form-->
              <div class="auth-form">
                <div class="auth-form__container">
                  <div class="auth-form__header">
                    <h3 class="auth-form__heading">ĐĂNG KÝ</h3>
                  </div>
                  <div class="modals-close">
                    <i class="ti-close"></i>
                  </div>

                  <div class="auth-form__form">
                    <div class="auth-form__group">
                      <label class="auth-form__label">Tên tài khoản</label>
                      <input
                        type="text"
                        class="auth-form__input"
                        placeholder="Nhập tên tài khoản"
                      />
                    </div>
                    <div class="auth-form__group">
                      <label class="auth-form__label">Email</label>
                      <input
                        type="text"
                        class="auth-form__input"
                        placeholder="Nhập Email"
                      />
                    </div>
                    <div class="auth-form__group">
                      <label class="auth-form__label">Mật khẩu</label>
                      <input
                        type="text"
                        class="auth-form__input"
                        placeholder="Nhập mật khẩu"
                      />
                    </div>
                    <div class="auth-form__group">
                      <label class="auth-form__label">Xác nhận mật khẩu</label>
                      <input
                        type="text"
                        class="auth-form__input"
                        placeholder="Nhập lại mật khẩu"
                      />
                    </div>
                  </div>

                  <div class="auth-form__controls">
                    <button class="btn btn--primary btn__signin">Đăng ký</button>
                  </div>

                  <div class="auth-form__socials">
                    <a
                      href=""
                      class="auth-form__socials--fb btn btn--with-icon"
                    >
                      <i
                        class="auth-form__socials-icon fab fa-facebook-square"
                      ></i>
                      <span class="auth-form__socials-title">
                        Kết nối với Facebook
                      </span>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- header-with-search -->
          <form method="GET" action="/search">
          <div class="header-with-search">
            <div class="header__logo">
              <a href="/" class="header__logo-link">
                <img
                  class="header__logo-img"
                  src="/client_styles/assets/img/logo.png"
                  alt=""
                />
              </a>
            </div>

            <div class="header__search">
              <input
               name="name"
                type="text"
                class="header__search-input"
                placeholder="Nhập sản phẩm muốn tìm kiếm"
              />
              <!-- Select -->
              <div class="header__search-select">
                <span class="header__search-select-label">Tìm kiếm theo</span>
                <i class="header__search-select-icon ti-angle-down"></i>
                <ul class="header__search-option">
                  <li class="header__search-option-item">
                    <span>Tên sách</span>
                    <i class="ti-check"></i>
                  </li>
                  <li class="header__search-option-item">
                    <span>Tên tác giả</span>
                    <i class="ti-check"></i>
                  </li>
                </ul>
              </div>

              <!-- Search button -->
              <button type = "submit" class="header__search-btn">
                <i class="header__search-btn-icon fas fa-search"></i>
              </button>
            </div>

            <div class="header__cart">
              <i class="header__cart-icon ti-shopping-cart"></i>
            </div>
          </div>
        </form>
        </div>
      </header>
    
