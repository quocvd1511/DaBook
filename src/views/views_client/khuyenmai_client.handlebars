<body>
  <!-- container -->
    <div class="sale">
        <div class="text-center" >
            <img src="/client_styles/assets/img/SIÊU KHUYẾN MÃI.png" style="min-width: 50%; min-height:50%;">
        </div>
        <div class="text-center sale__voucher">
            <a href="/chitiettk#khovoucher" style="text-decoration:none" class="myvoucher">
