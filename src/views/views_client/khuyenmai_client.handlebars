                                <img src="/client_styles/assets/img/logo_khtt.png" class="sale__voucher-logo">
                            </div>
                            <div class="sale__card-content">
                                <div class="card-container">
                                <h3 class="card-title" name="phantram" value="{{this.phantram}}">Giảm {{this.phantram}}%</h3>      
                                <p class="card-text sale__card-text card-manhap" name="{{this.manhap}}" value="{{this.manhap}}">Nhập mã {{this.manhap}}</p>                                       
                                <p class="card-text sale__card-text card-ngakt"><small class="text-muted" name="ngaykt" value="{{this.ngaykt}}">HSD: {{this.ngaykt}}</small></p>
                                </div>
                                <div class="card-button">
                                {{#ifCond this.sl '!=' 0}}
                                   {{!-- <a><button class="btn__save btn__save--primary">Lưu</button></a> --}}
                                    <a href="/luukhuyenmai?phantram={{this.phantram}}&manhap={{this.manhap}}&ngaykt={{this.ngaykt}}" class="btn__save btn__save--primary voucher-btn">Lưu</a>                                 
                               
                                {{else}}
                                    <button class="btn__save btn__save--disable" ><b>Đã hết</b></button>
                                {{/ifCond}}     
                            </div> 
                            </div>
                        </div>
                    {{/ifCond}}
                    {{/each}}
                </div>
            </div>
