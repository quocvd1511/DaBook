                        <div class="sale__list-item">
                            <img src="/client_styles/assets/img/ưu_đãi.png" class="item-img">
                        </div>
                        <div class="sale__list-text">Ưu đãi khách hàng<br>thân thiết</div>
                    </div>
                </a>
            </div>

            <div class="apply">
                <div class="apply__title">
                    <div class="apply__title-content">
                        <div class="apply__title-content-h1">
                            <h1>Áp mã nhanh chóng</h1>
                        </div>
                        <h6>Các bước thực hiện</h6>
                    </div>
                </div>
                <div class="apply-step">
                    <div class="apply__step-container"> 
                        <div class="apply__list-text">Lưu mã</div>
                        <img src="/client_styles/assets/img/Lưu_mã.png" class="apply__list-img">
                    </div>  
                    <i style="vertical-align: middle;" class="fas fa-angle-double-right"></i>
                    <div class="apply__step-container">
                        <div class="apply__list-text">Nhập mã</div>
                        <img src="/client_styles/assets/img/Nhập_mã.png" class="apply__list-img">
                    </div>   
                    <i class="fas fa-angle-double-right"></i>
                    <div class="apply__step-container">
                        <div class="apply__list-text">Áp dụng</div>
                        <img src="/client_styles/assets/img/Áp_dụng.png" class="apply__list-img">
                    </div>                       
                </div>
            </div>

            <div class="sale__list-voucher" id="magiamgia">
                <div class="sale__voucher-title">
                    <img src="/client_styles/assets/img/3.png" alt="">
                </div>
                <div class="list-card">
                    {{#each khuyenmai}}
                    {{#ifCond this.loai '==' 'mã giảm giá'}}
                    <div class="sale__card">
                            <div class="sale__card-img">
                                <img src="/client_styles/assets/img/logo_mgg.png" class="sale__voucher-logo">
                            </div>
                            <div class="sale__card-content">
                                <div class="card-container">
                                <h3 class="card-title khachhang" value="{{this.makm}}">Giảm {{this.phantram}}%</h3>      
                                <p class="card-text sale__card-text">Nhập mã {{this.manhap}}</p>                                       
                                <p class="card-text sale__card-text"><small class="text-muted">HSD: {{this.ngaykt}}</small></p>
                                </div> 
                                <div class="card-button">
                                {{#ifCond this.sl '!=' 0}}
                                   {{!-- <a><button class="btn__save btn__save--primary">Lưu</button></a> --}}
                                    <a href="/luukhuyenmai?phantram={{this.phantram}}&manhap={{this.manhap}}&ngaykt={{this.ngaykt}}" class="btn__save btn__save--primary">Lưu</a> 
                              
                                {{else}}
                                    <button class="btn__save btn__save--disable" ><b>Đã hết</b></button>
                                {{/ifCond}}    
                                </div> 
                            </div>
                        </div>
                    {{/ifCond}}
                    {{/each}}
                </div>
            </div>
