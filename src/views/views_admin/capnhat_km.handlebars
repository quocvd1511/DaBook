            <!-- Start right Content here -->

            <div class="content-page">
                <!-- Start content -->
                <div class="content">

                    <div class="">
                        <div class="page-header-title">
                            <h4 class="page-title" style="margin-left: 300px;">Cập nhật khuyến mãi</h4>
                        </div>
                    </div>

                    <div class="page-content-wrapper ">

                        <div class="container-fluid">
                            <div class="row">
                                

                                <div class="col-lg-6" style="margin-left: 300px;">
                                    
                                    <div class="card">
                                        <form method="POST" action="/admin/quan-ly-khuyen-mai/cap-nhat-khuyen-mai/save">
                                        <div class="card-body">
                                            <h4 class="m-b-30 m-t-0">Cập nhật thông tin khuyến mãi</h4>
                                            {{#each khuyenmais}}
                                            <div class="demo-box">
                                                <p class="text-muted m-b-15 font-13">
                                                    Mã khuyến mãi
                                                </p>
                                                <input type="text" class="form-control" maxlength="25" name="makm" id="placement" placeholder="Mã khuyến mãi" value={{this.makm}}>
                                                <p class="text-muted m-b-15 font-13">
                                                    Mã nhập
                                                </p>
                                                <input type="text" class="form-control" maxlength="25" name="manhap" id="placement" placeholder="Mã khuyến mãi" value={{this.manhap}}>
        
                                                <div class="m-t-20">
                                                    <p class="text-muted m-b-15 font-13">
                                                        Nội dung khuyến mãi
                                                    </p>
                                                    <textarea id="textarea" class="form-control" maxlength="225" rows="3" placeholder="Nội dung khuyến mãi" style="margin-bottom: 18px;" name="noidung">{{this.noidung}}</textarea>
                                                </div>
                                                {{#ifCond this.trangthai '==' 'Đã kết thúc'}}
                                                <div class="form-group ">
                                                    <label>Chọn tình trạng khuyến mãi</label>
                                                        <select class="form-control" name="tinhtrang">
                                                            <option selected>Đã kết thúc</option>
                                                            <option>Đang mở</option>
                                                            <option>Chưa bắt đầu</option>
                                                        </select>
                                                </div>
                                                {{else ifCond this.trangthai '==' 'Đang mở'}}
                                                <div class="form-group ">
                                                    <label>Chọn tình trạng khuyến mãi</label>
                                                        <select class="form-control" name="tinhtrang">
                                                            <option>Đã kết thúc</option>
                                                            <option selected>Đang mở</option>
                                                            <option>Chưa bắt đầu</option>
                                                        </select>
                                                </div>
                                                {{else}}
                                                <div class="form-group ">
                                                    <label>Chọn tình trạng khuyến mãi</label>
                                                        <select class="form-control" name="tinhtrang">
                                                            <option>Đã kết thúc</option>
                                                            <option>Đang mở</option>
                                                            <option selected>Chưa bắt đầu</option>
                                                        </select>
                                                </div>
                                                {{/ifCond}}
                                                
                                                 <p class="text-muted m-b-15 font-13">
                                                    Số lượng
                                                </p>
                                                <input type="text" class="form-control" maxlength="25" name="sl" id="placement" placeholder="Số lượng" value={{this.sl}}>

                                                <div style="margin-top: 10px;" class="form-group">
                                                    <label class="control-label">Phần trăm khuyến mãi</label>
                                                    <input id="demo1" type="text" value={{this.phantram}} name="demo1" data-bts-button-down-class="btn btn-primary" data-bts-button-up-class="btn btn-primary">
                                                </div>

                                                <div class="form-group">
                                                    <label class="control-label">Mức giá tối thiểu áp dụng khuyến mãi</label>
                                                    <input id="demo3" type="text" value={{this.dieukien}} name="demo3" data-bts-button-down-class="btn btn-primary" data-bts-button-up-class="btn btn-primary">
                                                </div>
                                            </div>
        
                                            <div class="">
                                                <form action="#">
                                                    <div class="form-group">
                                                        <label>Ngày bắt đầu và ngày kết thúc khuyến mãi</label>
                                                        <div>
                                                            <div class="input-daterange input-group" id="date-range">
                                                                <input type="text" class="form-control" name="ngaybd" value={{this.ngaybd}}>
                                                                <span class="input-group-addon bg-primary text-white b-0">to</span>
                                                                <input type="text" class="form-control" name="ngaykt" value={{this.ngaykt}}>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                            {{/each}}
                                            <button type="submit" class="btn btn-primary" style="display: flex; justify-content: center;">Cập nhật</button>
                                        </div> <!-- card-body -->
                                        </form>
                                    </div> <!-- card -->
                                </div> <!-- col -->
