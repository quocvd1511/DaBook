<div class="content-container">

  <div class="container-fluid">

    <nav class="navbar navbar-expand-lg navbar-light bg-light rounded">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Quản Lý Tài Khoản</a>
        <button
          class="navbar-toggler"
          type="button"
          data-mdb-toggle="collapse"
          data-mdb-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <button type="button" class="btn btn-link">Thêm sách</button>
          </div>
        </div>
      </div>
    </nav>

    <div class="jumbotron mt-2">
      <button type="button" class="btn btn-primary">Xóa</button>
      <div class="row">
        {{#each books}}
          <a>
            <div class="col">
              <div
                class="card"
                style="height:auto; width:18rem; margin-top:20px"
              >

                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                    <div class="input-group-text">
                      <input
                        type="checkbox"
                        aria-label="Checkbox for following text input"
                      />
                    </div>
                  </div>
                </div>
                <a
                  href="/admin/quan-ly-sach/{{this.masach}}"
                  style="color: black;"
                >
                  <img
                    class="card-img-top"
                    src="{{this.hinhanh}}"
                    alt="Card image cap"
                  />
                  <div class="card-body">
                    <h5 class="card-title">{{this.tensach}}</h5>
                    <p class="card-text">Tác giả: {{this.tacgia}}</p>
                    <p class="card-text">NXB: {{this.nxb}}</p>
                    <p class="card-text">Thể loại: {{this.theloai}}</p>
                    </a>
                    <div class="mt-4">
                      <a href="/admin/quan-ly-sach/{{this.masach}}"><button type="button" class="btn btn-success">Chi tiết</button></a>
                    <button type="button" class="btn btn-success">Xóa</button>
                    </div>
                  </div>

              </div>
            </div>
          </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>